@model List<Product>
<div class="row mb-4">
    <div class="col-md-6">
        <h2>Danh sách sản phẩm</h2>
    </div>
    <div class="col-md6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Thêm sản phẩm
        </a>
    </div>
</div> 
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Loại</th>
            <th>Hình ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @x.Name
                    </td>
                    <td>
                        @x.Price
                    </td>
                    <td>
                        @x.Category.Name
                    </td>
                    <td>
                        @if (x.ImageUrl != null) 
                         { 
                         <img  src="@x.ImageUrl" style="width: 100px"/>
                         }
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i>Sửa</a>
                        <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Xóa</a>
                    </td>
                </tr>
         }
    </tbody>
</table>
<div class="d-flex justify-content-center mt-4">
    <nav>
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = 1 })">&laquo;</a>
            </li>

            <!-- Các trang -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.TotalPages })">&raquo;</a>
            </li>
        </ul>
    </nav>
</div>
