@foreach (var product in Model)
{
<div class="card mb-3 col-md-4">
    <h3 class="card-header">@product.Name</h3>
    <div class="card-body">
        <h5 class="card-title">Giá: @product.Price </h5>
    </div>
    @if (!string.IsNullOrEmpty(product.ImageUrl))
    {
        <img src="/@product.ImageUrl" class="img-fluid" />
    }
    else
    {
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>
    }
    <div class="card-body">
        <a href="#" class="card-link btn btn-outline-dark">Chi tiết</a>
        <a class="addtocart card-link btn btn-outline-info" data-productId="@product.Id" asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@product.Id">Thêm vào giỏ hàng</a>
    </div>
</div>
}
