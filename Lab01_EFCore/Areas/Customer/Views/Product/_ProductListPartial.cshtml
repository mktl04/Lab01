@model List<Product>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in @ViewBag.Products)
    {
        <div class="col">
            <div class="card h-100">
                <h5 class="card-header text-center">@product.Name</h5>
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="/@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: contain"/>
                }
                else
                {
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="200" xmlns="http://www.w3.org/2000/svg"
                         role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <rect width="100%" height="100%" fill="#868e96" />
                        <text x="50%" y="50%" fill="#dee2e6" dy=".3em" text-anchor="middle">Image</text>
                    </svg>
                }
                <div class="card-body text-center">
                    <p class="card-text text-muted">Price: @product.Price USD</p>
                    <a href="#" class="btn btn-outline-primary btn-sm me-2">Chi tiết</a>
                    <a href="#" class="btn btn-outline-success btn-sm">Thêm vào giỏ hàng</a>
                </div>
            </div>
        </div>
    }
</div>